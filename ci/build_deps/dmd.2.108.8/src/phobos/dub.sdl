configuration "library" {
    targetType "staticLibrary"
    sourcePaths "lib"
    targetPath "generated-lib"
    #excludedSourceFiles "unittest.d" "test/**" "std/**" "tools/**" "etc/**"
}

configuration "unittest" {
    dflags "-main"
    targetType "executable"
    sourcePaths "lib"
    targetPath "generated-lib"
    #excludedSourceFiles "unittest.d" "test/**" "std/**" "tools/**" "etc/**"
}
